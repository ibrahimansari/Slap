<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:paddingBottom="@dimen/myosdk__activity_vertical_margin"
    android:paddingLeft="@dimen/myosdk__activity_horizontal_margin"
    android:paddingRight="@dimen/myosdk__activity_horizontal_margin"
    android:paddingTop="@dimen/myosdk__activity_vertical_margin"
    tools:context=".Landing" >

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:background="@drawable/ic_launcher"
        android:id="@+id/imageView"
        android:layout_above="@+id/pebble_button"
        android:layout_below="@+id/title" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slapp"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size"
        android:padding="@dimen/text_padding"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/myo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Myo"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size"
        android:padding="@dimen/text_padding"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/pebble_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Pebble"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size"
        android:padding="@dimen/text_padding"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"
        android:layout_above="@+id/myo_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>